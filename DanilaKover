            <p>Все данные засекречены. Несанкционированный доступ преследуется по закону.</p>
            <p>© 2059 Aurum Corporation. Все права защищены.</p>
        </footer>
    </div>

    <script>
        // ========== СИСТЕМА ЗАГРУЗКИ ОПЕРАЦИОННОЙ СИСТЕМЫ ==========
        document.addEventListener('DOMContentLoaded', function() {
            const osLoader = document.getElementById('osLoader');
            const progressBar = document.getElementById('progressBar');
            const loaderStatus = document.getElementById('loaderStatus');
            const bootSequence = document.getElementById('bootSequence');
            const mainContainer = document.getElementById('mainContainer');
            
            let progress = 0;
            const totalSteps = 15;
            const stepTime = 150;
            
            const bootMessages = [
                { text: ">>> Инициализация ядра PRISMA OS...", delay: 0, type: "normal" },
                { text: ">>> Проверка оборудования...", delay: 1, type: "normal" },
                { text: ">>> Загрузка модулей безопасности...", delay: 2, type: "normal" },
                { text: "[OK] Модуль шифрования AES-256 активен", delay: 3, type: "success" },
                { text: ">>> Подключение к серверам Aurum...", delay: 4, type: "normal" },
                { text: "[OK] Соединение установлено (шифрованный канал)", delay: 5, type: "success" },
                { text: ">>> Проверка учетных данных...", delay: 6, type: "normal" },
                { text: "[OK] Доступ подтвержден", delay: 7, type: "success" },
                { text: ">>> Загрузка модуля биометрии...", delay: 8, type: "normal" },
                { text: "[WARNING] Обнаружен нестандартный биодвигатель", delay: 9, type: "warning" },
                { text: ">>> Анализ системных журналов...", delay: 10, type: "normal" },
                { text: ">>> Инициализация интерфейса...", delay: 11, type: "normal" },
                { text: "[OK] Графический интерфейс загружен", delay: 12, type: "success" },
                { text: ">>> Загрузка личных данных сотрудника...", delay: 13, type: "normal" },
                { text: "[OK] Личное дело Ковёр Д. загружено", delay: 14, type: "success" },
                { text: ">>> Готово. Добро пожаловать, оператор.", delay: 15, type: "success" }
            ];
            
            function addBootMessage(message, type = "normal") {
                const line = document.createElement('div');
                line.className = 'boot-line';
                
                let prefix = ">";
                if (type === "success") prefix = "[OK]";
                if (type === "error") prefix = "[ERROR]";
                if (type === "warning") prefix = "[WARNING]";
                
                line.innerHTML = `<span class="boot-${type}">${prefix} ${message}</span>`;
                bootSequence.appendChild(line);
                
                // Прокрутка вниз
                bootSequence.scrollTop = bootSequence.scrollHeight;
                
                // Анимация появления
                setTimeout(() => {
                    line.style.opacity = 1;
                }, 10);
            }
            
            function updateProgress() {
                progress += 100 / totalSteps;
                progressBar.style.width = progress + '%';
                
                // Обновление статуса
                if (progress < 30) {
                    loaderStatus.innerHTML = `Инициализация системы... <span>${Math.round(progress)}%</span>`;
                } else if (progress < 70) {
                    loaderStatus.innerHTML = `Загрузка модулей... <span>${Math.round(progress)}%</span>`;
                } else {
                    loaderStatus.innerHTML = `Подготовка интерфейса... <span>${Math.round(progress)}%</span>`;
                }
                
                // Добавление сообщений в соответствии с прогрессом
                const currentStep = Math.floor(progress / (100 / totalSteps));
                if (currentStep < bootMessages.length) {
                    const msg = bootMessages[currentStep];
                    if (msg) {
                        setTimeout(() => {
                            addBootMessage(msg.text, msg.type);
                        }, msg.delay * stepTime);
                    }
                }
                
                if (progress < 100) {
                    setTimeout(updateProgress, stepTime);
                } else {
                    // Загрузка завершена
                    setTimeout(() => {
                        loaderStatus.innerHTML = `Система готова <span>100%</span>`;
                        setTimeout(() => {
                            osLoader.classList.add('hidden');
                            mainContainer.classList.add('loaded');
                        }, 1000);
                    }, 500);
                }
            }
            
            // Начинаем загрузку
            setTimeout(updateProgress, 500);
        });
        
        // ========== ОБРАБОТКА ОШИБКИ ИЗОБРАЖЕНИЯ ==========
        function handleImageError() {
            const profileImage = document.getElementById('profileImage');
            const defaultAvatarIcon = document.getElementById('defaultAvatarIcon');
            
            // Скрываем изображение (если оно не загрузилось)
            profileImage.style.display = 'none';
            
            // Показываем иконку робота
            defaultAvatarIcon.style.display = 'flex';
        }
        
        // ========== ПРОВЕРКА ИЗОБРАЖЕНИЯ ПРИ ЗАГРУЗКЕ ==========
        window.addEventListener('load', function() {
            const profileImage = document.getElementById('profileImage');
            const defaultAvatarIcon = document.getElementById('defaultAvatarIcon');
            
            // Проверяем, загрузилось ли изображение
            if (profileImage.complete && profileImage.naturalHeight !== 0) {
                // Изображение загружено успешно
                profileImage.style.display = 'block';
                defaultAvatarIcon.style.display = 'none';
            } else {
                // Изображение не загрузилось, показываем иконку
                profileImage.style.display = 'none';
                defaultAvatarIcon.style.display = 'flex';
            }
        });
        
        // ========== ОСНОВНАЯ НАВИГАЦИЯ ==========
        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', function() {
                const tabId = this.getAttribute('data-tab');
                
                // Handle logout
                if (tabId === 'logout') {
                    if (confirm('Завершить сеанс доступа?')) {
                        // Показываем экран выхода
                        document.body.innerHTML = `
                            <div class="os-loader" style="display: flex; background: #0a1a3a;">
                                <div class="loader-logo">
                                    <i class="fas fa-shield-alt"></i>
                                    <div>AURUM CORPORATION</div>
                                    <div style="font-size: 1rem; color: var(--gray); margin-top: 20px;">
                                        Сеанс доступа завершён
                                    </div>
                                    <div style="font-size: 0.9rem; color: #ff5555; margin-top: 10px;">
                                        Для повторного доступа требуется авторизация
                                    </div>
                                </div>
                            </div>
                        `;
                    }
                    return;
                }
                
                // Remove active class from all menu items and tab contents
                document.querySelectorAll('.menu-item').forEach(el => el.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
                
                // Add active class to clicked menu item and corresponding tab content
                this.classList.add('active');
                if (document.getElementById(tabId)) {
                    document.getElementById(tabId).classList.add('active');
                }
            });
        });
    </script>
</body>
</html>
